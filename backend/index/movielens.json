{
    "settings": {
        "analysis": {
            "analyzer": {
                "payload_analyzer": {
                    "type": "custom",
                    "tokenizer":"whitespace",
                    "filter":"delimited_payload_filter"
                }
            }
        }
    },
    "mappings": {
        "ratings": {
          "properties": {
                "userId": {
                    "type": "integer"
                },
                "movieId": {
                    "type": "integer"
                },
                "rating": {
                    "type": "double"
                }
            }
        },
        "users": {
            "properties": {
                "userId": {
                    "type": "integer"
                },
                "@model": {
                    "properties": {
                        "factor": {
                            "type": "text",
                            "term_vector": "with_positions_offsets_payloads",
                            "analyzer" : "payload_analyzer"
                        },
                        "version": {
                            "type": "keyword"
                        }
                    }
                }
            }
        },
        "movies": {
            "properties": {
                "movieId": {
                    "type": "integer"
                },
				"title": {
				    "type" :  "keyword"
				},
                "genres": {
                    "type": "keyword"
                },
                "@model": {
                    "properties": {
                        "factor": {
                            "type": "text",
                            "term_vector": "with_positions_offsets_payloads",
                            "analyzer" : "payload_analyzer"
                        },
                        "version": {
                            "type": "keyword"
                        }
                    }
                }
            }
        }
    }
}
